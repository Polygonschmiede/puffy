  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.1.3",
    "@analogjs/vitest-angular": "^2.1.3",
    "@angular-devkit/architect": "^0.2100.0",
    "@angular-devkit/build-angular": "^21.0.0",
